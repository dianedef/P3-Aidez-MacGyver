import sys, time, pygame
from pygame.locals import (
    K_UP,
    K_DOWN,
    K_LEFT,
    K_RIGHT,
    K_ESCAPE,
    KEYDOWN,
    QUIT,
)

pygame.init()

screen = pygame.display.set_mode((300, 200), pygame.RESIZABLE)
screen.fill((255, 255, 255))

player = pygame.image.load(ressource/"MacGyver.png").convert_alpha()
garde = pygame.image.load(ressource/"Gardien.png").convert_alpha()
item1 = pygame.image.load(ressource/"seringue.png").convert_alpha()
item2 = pygame.image.load(ressource/"ether.png").convert_alpha()
item3 = pygame.image.load(ressource/"tube_plastique.png").convert_alpha()

player_rect = player.get_rect()

path = pygame.Surface((50, 50))
path.fill((0, 0, 0))

# On dessine les élèments sur l'écran
screen.blit(player, player.position)
screen.blit(garde, garde.position)
screen.blit(item1, item1.position)
screen.blit(item2, item2.position)
screen.blit(item3, item3.position)
pygame.display.flip()

